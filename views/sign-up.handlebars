<div class="container">

  <h1>Sign-Up</h1>
  {{#if error}} <span>{{error}}</span>{{/if}}
  <form method="POST" action="/user/sign-up">

    <div class="form-group">
      <label>Name</label>
      <input type="text" name="name" class="form-control" placeholder="Name">
    </div>
      <div class="form-group">
      <label>Username</label>
      <input type="text" name="username" class="form-control" placeholder="Username">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" name="password" class="form-control" placeholder="Last Name">
    </div>

    <div class="form-group">
      <label>Rate Limits for Developers</label>
      <input type="text" name="developers" class="form-control" placeholder="Rate Limit for Developer's API">
    </div>

    <div class="form-group">
      <label>Rate Limits for Companies</label>
      <input type="text" name="companies" class="form-control" placeholder="Rate Limit for Companies's API">
    </div>

    <div class="form-group">
      <label>Rate Limits for Students</label>
      <input type="text" name="students" class="form-control" placeholder="Rate Limit for Students's API">
    </div>



    <input type="submit" class="btn btn-primary" value="Register">
  </form>
</div>